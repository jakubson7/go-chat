{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "react-app",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "@typescript-eslint",
    "prettier"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "es5",
        "singleQuote": false,
        "jsxSingleQuote": false,
        "tabWidth": 2,
        "jsxBracketSameLine": false,
        "semi": false,
        "bracketSpacing": true,
        "arrowParens": "always"
      }
    ]
  }
}